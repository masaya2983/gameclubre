<div class='container'>
  <div class='row'>

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2></h2>
    <%= form_with model:@user, local:true do |f| %>
      <%#= render 'layouts/errors', obj: @user %>
      <div class="form-grup">
      <%= f.label :category_id,"カテゴリー"%>
     <%= f.select :category_id, Category.all.pluck(:name)%>
     </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-grup row" id="star">
       <%= f.label :star,'評価',class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :star, id: :review_star %>
        <div id ="post_raty"></div>
      </div>
      <script>
       $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#post_raty');
         let opt = {
          starOn: "<%= asset_path('star-on.png')%>",
           starOff: "<%= asset_path('star-off.png')%>",
            scoreName:'game[star]',
          };
          raty(elem,opt);
          });
      </script>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>