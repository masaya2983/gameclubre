<%= form_with model:game,local:true do |f|%>
<div class="form-group">
<%= f.label(:pubulic, for: nil, class: 'game-status_label' )do %>
 <%=form.radio_button :status, :public %>
 <%= I18n.t('activerecord.attributes.post.statuses.public') %>
</div>
<div class="form-group">
 <%= f.label(:private,for: nil, class:'post-status_label')do %>
   <%= I18n.t('activerecord.attributes.post.statuses.private') %>
  <%=form.radio_button :status, :private %>
  </div>
<div class="form-grup">
  <%= f.label :title ,"タイトル"%>
  <%= f.text_field :title, class: 'form-control game_title' %>
</div>
   
<div class="form-grup">
  
  
   
<div class="form-grup">
  <%= f.label :category,"カテゴリー"%>
  <%=f.select_button :serect_category%>
   <%= f.select :model, options_for_select({"RPG" =>"rpg", "アクション"=>"action", "シューティング=> shooting", "アドベンチャー"=>"adventure", "音楽"=>"music", "パズル"=>"pazule"," スポーツ"=>"sport", "カードゲーム"=>"tcg", "複数"=>"mixe" }) %>
</div>

<div class="form-group">
  <%= f.label:review,"レビュー"%>
  <%= f.text_area :body, class: 'form-control game_title' %>
</div>
<div class="form-group">
  <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>