<%= form_with model: game, local:true do |f|%>
<div class="form-group">
<%= f.label(:pubulic, for: nil, class: 'game-status_label' )do %>
 <%= f.radio_button :status, :public %>
 <%= I18n.t('activerecord.attributes.game.statuses.public') %>
 <% end %>
</div>
<div class="form-group">
 <%= f.label(:private,for: nil, class:'post-status_label')do %>
   <%= I18n.t('activerecord.attributes.game.statuses.private') %>
  <%= f.radio_button :status, :private %>
  <% end %>
  </div>
<div class="form-grup">
  <%= f.label :title ,"タイトル"%>
  <%= f.text_field :title, class: 'form-control game_title' %>
</div>
 
<div class="form-grup row" id="star">
 <%= f.label :star,'評価',class:'col-md-3 col-form-label' %>
 <%= f.hidden_field :star, id: :review_star %>
</div>
<script>
    $('#star').empty();
  $('#star').raty({
      size : 36,
      starOff: '<%= asset_path('star-off.png')%>',
      starOn : '<%= asset_path('star-on.png')%>'
       scoreName: 'game[star]',
      half: false,
  })
</script>

  </div>
<div class="form-grup">
  <%= f.label :category,"カテゴリー"%>
   <%= f.select :model, options_for_select({"RPG" =>"rpg", "アクション"=>"action", "シューティング"=> "shooting", "アドベンチャー"=>"adventure", "音楽"=>"music", "パズル"=>"pazule"," スポーツ"=>"sport", "カードゲーム"=>"tcg", "複数"=>"mixe" }) %>
</div>

<div class="form-group">
  <%= f.label:review,"レビュー"%>
  <%= f.text_area :review %>
</div>
<div class="form-group">
  <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>