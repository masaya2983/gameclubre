<%= form_with model:game,local:true do |f|%>
<div class="form-grup">
  <%= f.label :title ,"タイトル"%>
  <%= f.text_field :title, class: 'form-control game_title' %>
</div>
<div class="form-grup">
  <%= f.label :category,"カテゴリー"%>
  <%=f.select_button :serect_category%>
  <%= f.select :category_id, Category .category_i18n.invert%>
</div>
<div class="form-group">
  <%= f.label:review,"レビュー"%>
  <%= f.text_area :body, class: 'form-control game_title' %>
</div>
<div class="form-group">
  <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>