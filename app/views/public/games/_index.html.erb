<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>投稿日</th>
       <th>カテゴリー</th>
      <th>タイトル</th>
      <th>レビュー</th>
      <th>評価</th>

      <th colspan="3"></th>
     </tr>
  </thead>
  <tbody>
   <% games.each do |game| %>
    <tr>
      <td>
        <%= image_tag game.user.get_profile_image %>
      </td>
      <td><%= l game.created_at %></td>
      <td><%=  game.category_id%></td>
      <td><%= game.title %></td>
      <td><%= game.review %></td>
      <td><%= link_to game.star%></td>

      <td class=<%= "favorite-" + game.id.to_s %> >
       <%= render "public/favorites/btn",game:game %>
       </td>
        <td><%= render "public/comments/counter", game: game %></td>
        <td><%= link_to "show", game, class: "btn btn-success" %></td>
   　 </tr>
   <% end %>
　</tbody>
</table>
