<div class='container px-5 px-sm-0'>
  <div class='row'>
   <%= render 'public/searches/form' %>
    <div class='col-md-3'>


       <h2 class="mt-3">New game</h2>
      <%= render 'public/games/form', game: @game %>

    </div>
       <div class='col-md-8 offset-md-1'>
      <table class=table>
        <tr>
         <td> <%= link_to(@game.user) do %>
         <%= image_tag @game.user.get_profile_image, size:"100x100" %><br>
            <%= @game.user.name %>
            <% end %>
         </td>
         <td> <%= @category.id %></td>
          <td><%= link_to @game.title %></td>
          <td><%= @game.review %></td>
          <td class=<%= "favorite-" + @game.id.to_s %> >
            <%# render "public/favorites/btn", game: @game %>
          </td>
        <% if @game.user == current_user %>
        <td><%= link_to '編集',edit_game_path(@game), class: "btn btn-sm btn-success edit_game_#{@game.id}" %></td>
        <td><%= link_to '削除',@game,method: :delete, date: { confirm: '本当に消しますか？'}, class: "btn btn-sm btn-danger destroy_game_#{@game.id}" %></td>
        <% end %>
        <div class="comments-index">
            <%= render "public/coments/index", game: @game %>
        </div>
        <%= render "public/coments/form", game: @game, comment: @comment %>

    </div>
  </div>
</div>