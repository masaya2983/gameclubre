<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>
       <%= @user.name %>さんの編集
      </h3>
        <table class="table table-hover table-inverse">
          <tr>
            <th>UserID</th>
            <td> <%= @user.id %></td>
          </tr>
        </table>
      <%= form_with model: @user,url admin_user_path(@user.id),method: :patch, local:true do |f| %>
       <table class="table-hover table-inverse">
         <tr>
           <th><%= f.label :name "名前" %></th>
           <td><%= f.text_field :name %></td>
         </tr>
         <tr>
           <th><%= label :email "メールアドレス" %></th>
           <td><%= f.text_field :email %></td>
           <td></td>
         </tr>
         <tr>
           <th><%= f.label :is_deleted, "ステータス"%></th>
           <td>
              <%= f.radio_button :is_deleted, false %>
             <%= f.radio_button :is_deleted, "有効" %>
           </td>
           <td>
             <%= f.radio_button :is_deleted, true %>
             <%= f.label :is_deleted, "退会" %>
           </td>
         </tr>
         <td><%= f.submit "変更を保存", class:'btn-success'%></td>
         <td></td>
         <td></td>
       </table>
      <% end %>
    </div>
  </div>
</div>