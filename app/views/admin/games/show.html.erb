<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3><%= @game.title %></h3>
       <table class="table table-hover table-inverse">
        <tr>
          <th>ゲームID</th>
        </tr>
         <tr>
          <th>タイトル</th>
          <td><%= @game.title %></td>
        </tr>
        <tr>
         <th>レビュー</th>
         <td><%= @game.review %></td>
        <th>評価</th>
         <td><%= @game.star %></td>
        </tr>
        <tr>

          <% if @game.is_deleted? %>
            <td><%= link_to "復活する", admin_game_path(@game), method: :patch, data: { confirm: "to_public?" }, class:"btn btn-success" %></td>
          <% else %>
            <td><%= link_to "削除する", admin_game_path(@game), method: :delete, data: { confirm: "delete?" }, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
        <tr>
          <td><%= link_to "index", admin_games_path, class:"btn btn-primary" %></td>
        </tr>
        </tr>
        <tr></tr>
      </table>
    </diV>
  </div>
</div>
